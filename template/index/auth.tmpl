{{define "title"}}{{end}}
{{define "head"}}{{end}}
{{define "content"}}
    {{if .apis}}
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th></th>
                    <th>监控名</th>
                    <th>接口地址</th>
                    <th>UPTIME</th>
                    <th>平均响应时间</th>
                    <th>管理</th>
                </tr>
            </thead>
            <tbody>
                {{range $i, $e := .apis}}
                <tr>
                    {{if eq 1 (index $.apisStatus .ID).Status}}
                    <td>
                        <span class="glyphicon glyphicon glyphicon-ok-sign" style="color:#9ae944;font-size: 25px;" aria-hidden="true"></span>
                    </td>
                    {{end}} {{if eq 0 (index $.apisStatus .ID).Status }}
                    <td>
                        <span class="glyphicon glyphicon-question-sign" style="color:#c6c6c6;font-size: 25px;" aria-hidden="true"></span>
                    </td>
                    {{end}} {{if eq -1 (index $.apisStatus .ID).Status }}
                    <td>
                        <span class="glyphicon glyphicon-remove-sign" style="color:#ff4c4c;font-size: 25px;" aria-hidden="true"></span>
                    </td>
                    {{end}}
                    <td>{{.Alias}}</td>
                    <td class="text"><span>{{.URL}}</span></td>
                    <td>{{TIMES ((index $.apisStatus .ID).UpPercentage) 100}}%</td>
                    <td>{{(index $.apisStatus .ID).AverageResponseTime}} 毫秒</td>
                    <td>
                        {{if eq 0 .Start}}
                        <a class="btn btn-success" role="button" href="{{$.BaseURI}}monitor/start/{{.ID}}">
        							<span class="glyphicon glyphicon-play" aria-hidden="true"></span> 开始监控
        						</a> {{else}}
                        <a class="btn btn-warning" role="button" href="{{$.BaseURI}}monitor/pause/{{.ID}}">
        							<span class="glyphicon glyphicon-pause" aria-hidden="true"></span> 暂停监控
        						</a> {{end}}
                        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#api-model" data-id="{{.ID}}" data-url="{{.URL}}" data-alias="{{.Alias}}" data-interval="{{.IntervalTime}}" data-alert="{{.AlertReceivers}}" data-timeout="{{.Timeout}}" data-failMax="{{.FailMax}}"
                            data-title="编辑监控接口" data-action="update">
    								<span class="glyphicon glyphicon-plus" aria-hidden="true"></span> 编辑
    							</button>
                        <a class="btn btn-danger" role="button" href="{{$.BaseURI}}api/delete/{{.ID}}">
    								<span class="glyphicon glyphicon-trash" aria-hidden="true"></span> 删除
    							</a>
                    </td>
                </tr>
                {{end}}
            </tbody>
        </table>
        <p>
            <button id="createAPIButton" type="button" class="btn btn-primary" data-toggle="modal" data-action="create" data-title="增加监控接口" data-target="#api-model">
                    <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> 增加监控接口
                </button>
        </p>
    </div>
    {{end}}
    <div class="modal fade" id="api-model" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title"></h4>
                </div>
                <form method="post">
                    <div class="modal-body">
                        {{template "api" .}}
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-danger" data-dismiss="modal">取消</button>
                        <input type="submit" value="保存" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
{{end}}
{{define "foot"}}{{end}}
