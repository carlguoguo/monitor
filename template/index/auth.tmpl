{{define "title"}}{{end}} {{define "head"}}{{end}} {{define "content"}}
<div class="container">
	<div class="panel-body">
		<div class="table-responsive">
			<table class="table" style="table-layout:fixed;">
				<thead>
					<tr>
						<th>接口地址</th>
						<th>间隔时间(分钟)</th>
						<th>操作</th>
					</tr>
				</thead>
				<tbody>
					{{range $n := .apis}}
					<tr>
						<td style="white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">{{.URL}}</td>
						<td>{{.IntervalTime}}</td>
						<td><a title="Edit Note" class="btn btn-warning" role="button" href="{{$.BaseURI}}api/update/{{.ID}}">
									<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> 编辑
								</a>
							<a title="Delete Note" class="btn btn-danger" role="button" href="{{$.BaseURI}}api/delete/{{.ID}}">
									<span class="glyphicon glyphicon-trash" aria-hidden="true"></span> 删除
								</a>
						</td>
					</tr>
					{{end}}
				</tbody>
			</table>
		</div>
	</div>

	<p>
		<a title="Add Note" class="btn btn-primary" role="button" href="{{$.BaseURI}}api/create">
			<span class="glyphicon glyphicon-plus" aria-hidden="true"></span> 增加监控接口
		</a>
	</p>
	{{template "footer" .}}
</div>
{{end}} {{define "foot"}}{{end}}
